<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_discover">

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.yourcompany.excesseats.ui.discovery.ItemDiscoveryFragment"
        android:label="@string/title_discover">
        <action
            android:id="@+id/action_itemDiscoveryFragment_to_foodPostDetailFragment"
            app:destination="@id/foodPostDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="postId"
                app:argType="string" />
            <argument
                android:name="title"
                app:argType="string" />
            <argument
                android:name="latitude"
                app:argType="float" />
            <argument
                android:name="longitude"
                app:argType="float" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.yourcompany.excesseats.ui.posting.ItemPostingFragment"
        android:label="@string/title_post" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.yourcompany.excesseats.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.yourcompany.excesseats.ui.profile.UserProfileFragment"
        android:label="@string/title_profile" />

    <fragment
        android:id="@+id/foodPostDetailFragment"
        android:name="com.yourcompany.excesseats.ui.discovery.FoodPostDetailFragment"
        android:label="Food Details">
        <argument
            android:name="postId"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument
            android:name="longitude"
            app:argType="float" />
        <action
            android:id="@+id/action_foodPostDetailFragment_to_navigation_discover"
            app:destination="@id/navigation_discover"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.yourcompany.excesseats.ui.notifications.NotificationsFragment"
        android:label="Notifications">
        <action
            android:id="@+id/action_notifications_to_foodPostDetail"
            app:destination="@id/foodPostDetailFragment">
            <argument
                android:name="postId"
                app:argType="string" />
            <argument
                android:name="title"
                app:argType="string" />
            <argument
                android:name="latitude"
                app:argType="float" />
            <argument
                android:name="longitude"
                app:argType="float" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/errorFragment"
        android:name="com.yourcompany.excesseats.ui.error.ErrorFragment"
        android:label="Error" />
</navigation>
