        <!-- Primary brand color. matches wireframe -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/quantum_white_100</item>
        <!-- Secondary brand color. changed this up to match theme-->
