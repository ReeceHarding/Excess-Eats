<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.yourcompany.excesseats.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_postDetails"
            app:destination="@id/postDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.yourcompany.excesseats.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_navigation_map_to_postDetails"
            app:destination="@id/postDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.yourcompany.excesseats.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_navigation_notifications_to_postDetails"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_navigation_notifications_to_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.yourcompany.excesseats.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_postDetails"
            app:destination="@id/postDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.yourcompany.excesseats.ui.discovery.FoodPostDetailFragment"
        android:label="Post Details"
        tools:layout="@layout/fragment_food_post_detail">
        <argument
            android:name="postId"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument
            android:name="longitude"
            app:argType="float" />
    </fragment>

    <fragment
        android:id="@+id/itemDiscoveryFragment"
        android:name="com.yourcompany.excesseats.ui.discovery.ItemDiscoveryFragment"
        android:label="Discover Food"
        tools:layout="@layout/fragment_item_discovery">
        <action
            android:id="@+id/action_itemDiscoveryFragment_to_foodPostDetailFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>

</navigation>
